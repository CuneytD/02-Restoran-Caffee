<!DOCTYPE html>
<html lang="tr">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Ürün Kontrol paneli</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    .card img {
      height: 150px;
      object-fit: cover;
    }
    .sidebar {
      height: 100vh;
      position: sticky;
      top: 0;
    }
  </style>
</head>

<body class="bg-light">
  <div class="container-fluid">
    <div class="row min-vh-100">

      <!-- Sidebar -->
      <nav class="col-md-2 bg-light border-end p-3 sidebar">
        <div class="text-center">
            <h5>Kategoriler</h5>
        </div>        
        <hr>
        <div class="text-center">
          <a href="/logout" class="btn btn-danger">Çıkış Yap</a>
        </div>
        <hr>
        <div class="list-group">
          <% if (typeof todaymenu !== 'undefined') { %>
            <a href="#" class="list-group-item list-group-item-action active" onclick="showCategory('todaymenu')">Günün Yemeği (Todaymenu)</a>
          <% } %>
          <% if (typeof chefmenu !== 'undefined') { %>
            <a href="#" class="list-group-item list-group-item-action" onclick="showCategory('chefmenu')">Şefin Tavsiyesi (Chefmenu)</a>
          <% } %>
          <% if (typeof fullmenu !== 'undefined') { %>
            <a href="#" class="list-group-item list-group-item-action" onclick="showCategory('fullmenu')">Menü (Fullmenu)</a>
          <% } %>
          <% if (typeof gallerione !== 'undefined') { %>
            <a href="#" class="list-group-item list-group-item-action" onclick="showCategory('gallerione')">Galleri (Resimler)</a>
          <% } %>
        </div>
      </nav>

      <!-- İçerik -->
      <main class="col-md-10 p-4">
        <h2 id="kategoriBaslik">Ana Menü</h2>

        <!-- Ürün Ekleme Formu -->
        <div id="formContainer" class="mb-5">
          <div class="card">
            <div class="card-header" id="formBaslik">İçerik Ekle</div>
            <div class="card-body">
              <form id="ekleForm" action="/panel/todaymenu-ekle" method="POST" class="row g-3">
                <div class="col-md-3">
                  <input type="text" name="name" class="form-control" placeholder="Ad" required />
                </div>
                <div class="col-md-4">
                  <input type="text" name="description" class="form-control" placeholder="Açıklama" />
                </div>
                <div class="col-md-3">
                  <input type="text" name="imageUrl" class="form-control" placeholder="Resim URL" />
                </div>
                <div class="col-md-2">
                  <input type="number" step="0.01" name="price" class="form-control" placeholder="Fiyat" />
                </div>
                <div class="col-md-6 d-flex align-items-center gap-3">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="isActive" id="isActiveAdd" />
                    <label class="form-check-label" for="isActiveAdd">Aktif</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="isHome" id="isHomeAdd" />
                    <label class="form-check-label" for="isHomeAdd">Ana Sayfa</label>
                  </div>
                </div>
                <div class="col-12 text-end">
                  <button type="submit" class="btn btn-success">Ekle</button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Ürün Kartları -->
        <div id="urunListesi" class="row row-cols-1 row-cols-md-3 g-4">

          <% if (typeof todaymenu !== 'undefined') { %>
            <% todaymenu.forEach(item => { %>
              
              <%- include('./partials/ControllerPanel/todaymenu', { item }) %>

            <% }) %>
          <% } %>

          <% if (typeof chefmenu !== 'undefined') { %>
            <% chefmenu.forEach(item => { %>
              
              <%- include('./partials/ControllerPanel/chefmenu', { item }) %>

            <% }) %>
          <% } %>

          <% if (typeof fullmenu !== 'undefined') { %>
            <% fullmenu.forEach(item => { %>
              
              <%- include('./partials/ControllerPanel/fullmenu', { item }) %>

            <% }) %>
          <% } %>

          <% if (typeof gallerione !== 'undefined') { %>
            <% gallerione.forEach(item => { %>
              
              <%- include('./partials/ControllerPanel/gallerione', { item }) %>

            <% }) %>
          <% } %>

        </div>
      </main>
    </div>
  </div>

<!-- yeni kart ekle -->




  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let seciliKategori = 'todaymenu';

    function showCategory(kategori) {
      seciliKategori = kategori;
      const baslikMap = {
        todaymenu: 'Anayemek (Todaymenu)',
        chefmenu: 'Şef Menü (Chefmenu)',
        fullmenu: 'Tam Menü (Fullmenu)',
        gallerione: 'Galleri (Gallerione)'
      };
      document.getElementById('kategoriBaslik').textContent = baslikMap[kategori] || '';
      document.getElementById('formBaslik').textContent = 'Yeni ' + baslikMap[kategori] + ' Ekle';

      // Form action dinamik değişimi
      document.getElementById('ekleForm').action = `/panel/${kategori}-ekle`;

      // Sidebar active sınıfını güncelle
      document.querySelectorAll('.list-group-item').forEach(el => el.classList.remove('active'));
      event.target.classList.add('active');

      // Kartları filtrele
      document.querySelectorAll('.urun-kart').forEach(card => {
        if (card.dataset.kategori === kategori) {
          card.classList.remove('d-none');
        } else {
          card.classList.add('d-none');
        }
      });
    }

    document.addEventListener('DOMContentLoaded', () => {
      showCategory('');
    });
  </script>
</body>

</html>
